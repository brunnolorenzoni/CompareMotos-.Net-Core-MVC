@model CompareMotos.Models.Fuel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Fuel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FuelId" />
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeFuelId" class="control-label"></label>
                <select asp-for="TypeFuelId" class="form-control" asp-items="ViewBag.TypeFuelId"></select>
                <span asp-validation-for="TypeFuelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FeedingId" class="control-label"></label>
                <select asp-for="FeedingId" class="form-control" asp-items="ViewBag.FeedingId"></select>
                <span asp-validation-for="FeedingId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
