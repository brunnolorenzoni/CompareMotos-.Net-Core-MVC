@model IEnumerable<CompareMotos.Models.Brake>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FrontBrake)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BackBrake)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FrontBrake.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BackBrake.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BrakeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BrakeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BrakeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
